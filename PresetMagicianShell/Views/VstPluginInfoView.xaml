<catel:DataWindow x:Class="PresetMagicianShell.Views.VstPluginInfoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:PresetMagicianShell.ViewModels"
        xmlns:catel="http://schemas.catelproject.com"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModels:VstPluginInfoViewModel}"
        ResizeMode="CanResizeWithGrip"
        SizeToContent="Manual"
        Title="Plugin Capabilities" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DataGrid x:Name="PluginProperties" ItemsSource="{Binding Plugin.PluginInfoItems}" Grid.Row="0" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Width="*"
                                    Binding="{Binding Title}" IsReadOnly="False" SortDirection="Ascending" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</catel:DataWindow>