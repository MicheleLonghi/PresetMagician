                            Text="Auto Select Text Box" />
                        <xtk:BusyIndicator Margin="5" IsBusy="True">
                            BusyIndicator
                            <xtk:BusyIndicator.BusyContentTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="4">
                                        <TextBlock
                                            x:Name="textBlock"
                                            HorizontalAlignment="Center"
