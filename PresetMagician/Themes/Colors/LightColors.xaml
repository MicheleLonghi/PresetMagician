    <Color x:Key="ForegroundColor4">#909090</Color>
    <Color x:Key="ForegroundColor3">#6B6B6B</Color>
    <Color x:Key="ForegroundColor2">#252525</Color>
    <Color x:Key="ForegroundColor1">#101010</Color>
    <Color x:Key="SelectionColor1">#ffdac9f5</Color>
