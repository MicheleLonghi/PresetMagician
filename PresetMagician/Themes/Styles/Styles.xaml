<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  from https://raw.githubusercontent.com/MarcusWichelmann/WpfPlus  -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Themes/Styles/DataGridStyle.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Themes/Styles/Scrollbar.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Themes/Styles/WindowStyle.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Themes/Styles/TabItem.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Themes/Styles/TabControl.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Themes/Styles/StatusBarLinkLabel.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style
        x:Key="DefaultButtonStyle"
        BasedOn="{StaticResource {x:Type Button}}"
        TargetType="{x:Type Button}" />

</ResourceDictionary>