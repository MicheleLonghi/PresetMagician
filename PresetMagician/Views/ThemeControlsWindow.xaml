                                    <Button x:Name="button2">Another Button</Button>
                                </ToolBar>
                            </ToolBarTray>
                            <ToolBarTray
                                Margin="5"
                                IsLocked="False"
                                Orientation="Vertical"
                                Visibility="Collapsed">
                                <ToolBar x:Name="toolBar2" Band="0">
                                    <ToggleButton x:Name="toggleButton2">
                                        <ToggleButton.Content>
                                            <iconPacks:PackIconFontAwesome Kind="DochubBrands" />
                                        </ToggleButton.Content>
                                    </ToggleButton>
                                    <Separator />
                                    <Button x:Name="button3">
