                        <Expander
                            x:Name="expander"
                            Height="100"
                            Margin="5"
                            HorizontalAlignment="Left"
                            ExpandDirection="Right"
                            Header="expander1"
                            IsExpanded="True"
                            Visibility="Collapsed">
                            <Grid>
                                <TextBox x:Name="textBox1" Margin="10" />
                            </Grid>
                        </Expander>
                        <Expander
                            x:Name="expander1"
                            Height="100"
                            Margin="5"
                            HorizontalAlignment="Right"
                            ExpandDirection="Left"
