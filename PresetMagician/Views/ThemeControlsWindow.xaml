            <TabItem Header="Avalon Dock">
                <TabItem.Resources>
                    <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
                </TabItem.Resources>
                <xcad:DockingManager
                    x:Name="_dockingManager"
                    AllowMixedOrientation="True"
                    BorderBrush="Black"
                    BorderThickness="1">


                    <xcad:DockingManager.DocumentHeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    x:Name="image"
                                    Margin="0,0,4,0"
                                    Source="{Binding IconSource}" />
                                <TextBlock x:Name="textBlock" Text="{Binding Title}" />
                            </StackPanel>
                        </DataTemplate>
                    </xcad:DockingManager.DocumentHeaderTemplate>
                    <xcad:LayoutRoot x:Name="_layoutRoot">
                        <xcad:LayoutPanel Orientation="Horizontal">
                            <xcad:LayoutDocumentPaneGroup>
                                <xcad:LayoutDocumentPane>

                                    <xcad:LayoutDocument Title="Document 1" ContentId="document1" />
                                    <xcad:LayoutDocument Title="Document 2" ContentId="document2">
                                        <TextBox
                                            x:Name="textBox5"
                                            AcceptsReturn="True"
                                            Text="Document 2 Content" />
                                    </xcad:LayoutDocument>
                                </xcad:LayoutDocumentPane>
                            </xcad:LayoutDocumentPaneGroup>
                            <xcad:LayoutAnchorablePaneGroup DockWidth="125">
