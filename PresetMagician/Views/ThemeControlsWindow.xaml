                            ShowAvailableColors="True"
                            ShowDropDownButton="True"
                            ShowRecentColors="True"
                            ShowStandardColors="True"
                            UsingAlphaChannel="True" />
                        <xtk:RichTextBox
                            x:Name="richTextBox1"
                            Height="100"
                            Margin="5">
                            <FlowDocument>
                                <Paragraph>
                                    Flow Document in default text color.<Bold>Bold text.</Bold>
                                </Paragraph>
                                <Paragraph Foreground="Cyan">
