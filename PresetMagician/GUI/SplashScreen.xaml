<Window x:Class="Drachenkatze.PresetMagician.GUI.GUI.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Drachenkatze.PresetMagician.GUI.GUI"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        mc:Ignorable="d"
        Title="SplashScreen" Height="300" Width="620">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image x:Name="splashImage" Grid.Column="1" Grid.Row="1" />
        <TextBlock x:Name="splashMessage" HorizontalAlignment="Left" Margin="3,281,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="613" Foreground="White" />
    </Grid>
</Window>