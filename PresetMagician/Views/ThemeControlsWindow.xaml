                        <xtk:DateTimePicker Margin="5" />
                        <xtk:DateTimeUpDown Margin="5" />

                        <Button
                            x:Name="button7"
                            Margin="5"
                            Click="Button_Click_1"
                            Content="MessageBox" />
                        <xtk:SplitButton Margin="5" Content="Content">
                            <xtk:SplitButton.DropDownContent>
                                <StackPanel>
                                    <Button x:Name="button8" Content="SubContent" />
                                    <Button x:Name="button9" Content="SubContent" />
                                </StackPanel>
                            </xtk:SplitButton.DropDownContent>

                        </xtk:SplitButton>
                        <xtk:TimelinePanel
                            Margin="5"
                            BeginDate="01/01/2007"
                            EndDate="12/31/2007">
                            <TextBlock
                                x:Name="textBlock3"
                                xtk:TimelinePanel.Date="02/01/2007"
                                Text="TimelinePanel" />
                            <TextBlock
                                x:Name="textBlock4"
                                xtk:TimelinePanel.Date="03/31/2007"
                                Text="TimelinePanel" />
                            <TextBlock
                                x:Name="textBlock5"
                                xtk:TimelinePanel.Date="07/06/2007"
